
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id          String      @id @default(cuid())
  displayId   String      @unique
  name        String
  userId        String
  subname     String?
  avatar      String?
  bio         String?
  connections Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Category {
  id        String      @id @default(cuid())
  menuId    String
  name      String
  image     String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Product {
  id          String      @id @default(cuid())
  title       String
  description String
  price       Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}